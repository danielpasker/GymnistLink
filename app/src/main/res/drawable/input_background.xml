<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Frosted Glass Effect -->
<item>
    <shape>
        <solid android:color="#3EFFFFFF"/> <!-- Semi-transparent white (B3 is alpha for ~70% transparency) -->
        <corners android:radius="12dp"/>
    </shape>
</item>

<!-- Border -->
<item>
    <shape>
        <corners android:radius="12dp"/>
        <stroke android:width="1dp" android:color="#80FFFFFF"/> <!-- Semi-transparent border -->
    </shape>
</item>
</layer-list>
